<%= form_with model: @trip do |f| %>
  <%# les lignes suivantess sont là pour l'utilisateur si jamais champs pas rempl (validates) %>
  <% if @trip.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@trip.errors.count, "erreur") %> :</h4>
      <ul>
        <% @trip.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :destination, "Pays / ville de destination" %>
    <%= f.text_field :destination, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :departure_city, "Ville de départ" %>
    <%= f.text_field :departure_city, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :start_date, "Date de départ" %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :end_date, "Date de retour" %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :traveler_count, "Nombre de voyageurs" %>
      <%= f.number_field :traveler_count, class: "form-control", min: 1 %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :budget, "Budget (€)" %>
      <%= f.number_field :budget, class: "form-control", step: 50 %>
    </div>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
