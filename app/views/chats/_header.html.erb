<!-- app/views/chats/_header.html.erb -->
<div class="mb-4">
  <%= link_to chats_path, class: "btn btn-outline-secondary btn-sm mb-3" do %>
    <i class="fas fa-arrow-left me-1"></i>Back to all chats
  <% end %>

  <h1 class="chat-title mb-2"><%= chat.title %></h1>

  <p class="text-muted mb-0">
    <i class="fas fa-map-marker-alt me-1"></i><%= chat.trip.destination %>
    <span class="mx-2">•</span>
    <i class="fas fa-calendar me-1"></i><%= chat.trip.start_date %> to <%= chat.trip.end_date %>
    <span class="mx-2">•</span>
    <i class="fas fa-comments me-1"></i><%= chat.messages.count %> messages
  </p>
</div>
